                            <i class="fas fa-lock col-1"></i>
                        </div>
                    </div>
                    <input class="form-control" type="password" data-val="true" data-val-required="密碼不可空白" id="id_password1" name="ConfirmPassword" value="" placeholder="請輸入密碼" />
                    <i class="fas fa-eye form-control col-1" id="togglePassword1" style="cursor: pointer; margin-left: -30px; z-index: 1000; justify-content: center; align-items: center; "></i>
                </div>
            </div>
        </div>


        <!--信箱-->
        <div class="form-group row d-flex justify-content-center">
            <div class="col-8">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-envelope col-1"></i>
                        </div>
                    </div>
                    <input class="form-control" type="email" data-val="true" data-val-email="請輸入正確格式 example@mail.com" data-val-required="Email不可空白" id="Email" name="Email" placeholder="example@hotmail.com" value="" />
                </div>
            </div>
        </div>

        <!--登入按鈕-->
        <div class="form-group row d-flex justify-content-center">
            <div class="col-8">
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-outline-primary">確認送出</button>
                </div>
            </div>
        </div>

    </form>


    <div class="form-group">
        <button id="nowGive" type="button">帶入資料</button>
    </div>


