<body>


    <form action="/Auth/Register" method="post">

        <!--帳號-->
        <div class="form-group row d-flex justify-content-center">
            <div class="col-8">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-user col-1"></i>
                        </div>
                    </div>
                    <input class="form-control" type="text" data-val="true" data-val-required="帳號不可空白" id="Account" name="Account" placeholder="帳號" value="" />
                </div>
            </div>
        </div>

        <!--主密碼-->
        <div class="form-group row d-flex justify-content-center">
            <div class="col-8">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-lock col-1"></i>
                        </div>
                    </div>
                    <input class="form-control" type="password" data-val="true" data-val-required="密碼不可空白" id="id_password" name="Password" value="" placeholder="請輸入密碼" />
                    <i class="fas fa-eye form-control col-1" id="togglePassword" style="cursor: pointer; margin-left: -30px; z-index: 1000; justify-content: center; align-items: center; "></i>
                </div>
            </div>
        </div>

        <!--二道密碼-->
        <div class="form-group row d-flex justify-content-center">
            <div class="col-8">
                <div class="input-group">
                    <div class="input-group-prepend">
