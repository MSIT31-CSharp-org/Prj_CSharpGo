@model List<Prj_CSharpGo.Models.Recipe>

@{
    ViewData["Title"] = "cust_Index";
}

<link rel="stylesheet" href="~/Didi/css/recipe.css?v=0.1">

<!DOCTYPE html>
<html lang="en">
<body>
    <div class="container" style="margin-top:20px;">
        <div class="row">
            <div class="banner">
                <div class="container" style="margin-left: 20px;margin-top: 20px;">
                    <!-- container -->
                    <div class="banner-info text-center">
                        <img src="~/Didi/img/camping.png" alt=""
                             style="max-width: 900px; max-height: 500px; display: block; margin: auto;" />
                        <!-- max-width/max-height會照比例調整大小，不超過限制長度-->
                    </div>
                </div>
            </div>
            <br>
            <br>
            <br>
            <!-- 食譜清單 -->
            <section class="best-receipe-area" style="margin-top:50px;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-7 mb-3">
                            @*<div class="section-heading">*@
                            <a style="text-align: center; float: right; font-size: 30px;"><h3 class="re_font">食譜推薦</h3></a>
                        </div>
                        @*<div class="col-md-6 mb-3">
                                <a class="btn btn-success bi bi-plus" style="float:right" href="/Recipe/Create"></a>
                            </div>*@
                    </div>
                </div>
                <div class="row">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="col-12 col-md-4 p-5 mt-3">
                                <div style="margin:auto; width:350px;height:250px">
                                    @if (item.Img == null)
                                    {
                                        <img src="~/Didi/img/camping.png"
                                             class="rounded-circle img-fluid border img_1">
                                    }
                                    else
                                    {<img src="~/Didi/img/@item.Img"
                                          class="rounded-circle img-fluid border img_1">}
                                </div>
                                <div >
                                    <h3 class="text-center mt-3 mb-3 re_fonts">@item.RecipeName</h3>
                                </div>
                                <div>
                                    <p class="text-center"><a class="btn btn-success re_fonts" href="/Recipe/cust_Detail/@item.RecipeId">Read more</a></p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>
        </div>
    </div>
</body>
</html>


<!-- Start Script -->
<script src="assets/js/jquery-1.11.0.min.js"></script>
<script src="assets/js/jquery-migrate-1.2.1.min.js"></script>
<script src="assets/js/bootstrap.bundle.min.js"></script>
<script src="assets/js/templatemo.js"></script>
<script src="assets/js/custom.js"></script>

<!-- End Script -->