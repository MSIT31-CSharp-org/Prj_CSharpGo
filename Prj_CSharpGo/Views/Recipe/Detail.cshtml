@model Prj_CSharpGo.Models.Recipe

@{
    ViewData["Title"] = Model.RecipeName;
}

<br />

<input type="button" onclick="history.back()" value="上一頁" />

<br />
<br />
<div class="container" style="margin-left: 80px;">
    <img src="~/Didi/img/@Model.Img" />
</div>

<a class="btn btn-success" href="/Recipe/Edit/@Model.RecipeId">編輯</a>

        <div class="row">
            <div class="col-12 col-md-8">
                <div class="receipe-headline my-5">
                    <span>@Model.PublishTime</span>
                    <h2>@Model.RecipeName</h2>
                    <div class="receipe-duration">
                        <h6>準備時間: @Model.PreparationTime 分鐘</h6>
                        <h6>烹煮時間: @Model.CookingTime 分鐘</h6>
                        <h6>份量: @Model.Yield 人份</h6>
                    </div>
                </div>
            </div>
        </div>

        <!-- Single Preparation Step -->
        <div class="single-preparation-step">
            <div class="single-preparation-step d-flex"></div>
            <p>
                <h3>01.備料</h3>
            </p>
            <p>
                @Model.Preparation
            </p>
        </div>
        <!-- Single Preparation Step -->
        <div class="single-preparation-step">
            <p>
                <h3>02.烹煮步驟</h3>
            </p>
            <p>

                @Model.Step

    </p>
</div>

