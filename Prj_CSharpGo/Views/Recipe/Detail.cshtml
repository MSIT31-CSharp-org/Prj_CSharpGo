@model Prj_CSharpGo.Models.Recipe
<!-- Receipe Post Search -->
<div class="receipe-post-search mb-80" style="margin-left: 80px;margin-bottom:60px;margin-top:60px;">
    <div class="container">
        <form action="#" method="post">
            <div class="row">
                <div class="col-12 col-lg-3">
                    <select name="select1" id="select1">
                        <option value="1">All Receipies Categories</option>
                        <option value="1">All Receipies Categories 2</option>
                        <option value="1">All Receipies Categories 3</option>
                        <option value="1">All Receipies Categories 4</option>
                        <option value="1">All Receipies Categories 5</option>
                    </select>
                </div>
                <div class="col-12 col-lg-3">
                    <select name="select1" id="select2">
                        <option value="1">All Receipies Categories</option>
                        <option value="1">All Receipies Categories 2</option>
                        <option value="1">All Receipies Categories 3</option>
                        <option value="1">All Receipies Categories 4</option>
                        <option value="1">All Receipies Categories 5</option>
                    </select>
                </div>
                <div class="col-12 col-lg-3">
                    <input type="search" name="search" placeholder="Search Receipies">
                </div>
                <div class="col-12 col-lg-3 text-right">
                    <button type="submit" class="btn delicious-btn">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Receipe Slider -->
<div class="container" style="text-align: center;">
    <img src="~/Didi/img/@Model.Img" style="max-width: 500px;max-height: 700px" />
</div>

<!-- Receipe Content Area -->
<div class="receipe-content-area">
    <div class="container">
        <div class="row" style="margin-top:50px;">
            <div class="col-12 col-md-8" style="padding-left: 170px">
                <span>@Model.PublishTime</span>
                <h2>@Model.RecipeName</h2>
                <div class="receipe-duration">
                    <h6>準備時間: @Model.PreparationTime 分鐘</h6>
                    <h6>烹煮時間: @Model.CookingTime 分鐘</h6>
                    <h6>份量: @Model.Yield 人份</h6>
                </div>
            </div>
            <div class="col-12 col-md-2">
                <div class="receipe-ratings text-right my-5">
                    <div class="ratings">
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star-o" aria-hidden="true"></i>
                    </div>
                    <a href="#" class="btn delicious-btn">For Begginers</a>
                </div>
            </div>
            <div class="col-12 col-md-2">
                @* 修改&刪除 *@
                <a class="btn btn-success bi bi-pencil-square" href="/Recipe/Edit/@Model.RecipeId"></a>
                @Html.ActionLink("", "delete", new { id = Model.RecipeId }, new { @class = "btn btn-success bi bi-trash" })
            </div>
        </div>
        <div class="single-preparation-step" style="padding-left: 160px">
            <div class="row">
                <div class="col-md-6">
                    <p>
                        <h3>01.備料</h3>
                    </p>
                    @Html.Raw(Model.Preparation.Replace(Environment.NewLine, "<br/>"))
                    <p>
                        <h3>02.烹煮步驟</h3>
                    </p>
                    @Html.Raw(Model.Step.Replace(Environment.NewLine, "<br/>"))
                </div>
                <div class="col-md-4">
                    <div style="float:right;">
                        123
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

