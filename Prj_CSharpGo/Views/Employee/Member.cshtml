@using Microsoft.AspNetCore.Http

@model IEnumerable<Prj_CSharpGo.Models.User>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor emp

@{
    string empToastr = emp.HttpContext.Session.GetString("employeeToastr") ?? "Guest";
}

@{
    ViewData["Title"] = "Member";
    Layout = "EmployeeLayout";
}

<h1>會員資料</h1>
<hr />
<div class="search-form">
    <label> 關鍵字搜索 </label>
    <input id="search-input" type="text" placeholder="" />
    <style id="m-search"></style>
</div>
<script>
    var that = $(this);
    var mSearch = $("#m-search");
    $("#search-input").bind("change paste keyup", function () {
        var value = $(this).val();
        if (!value) {
            mSearch.html("");
            return;
        };
        mSearch.html('.wrap:not([data-index*="' + value + '"]) {display: none;}');
    });
</script>

<table class="table">
    <thead>
        <tr>
            <th>
                會員編號
            </th>
            <th>
                帳號
            </th>
            <th>
                名字
            </th>
            <th>
                電話
            </th>
            <th>
                Email
            </th>
            <th>
                建立日期
            </th>
            <th>
                帳號狀態
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="wrap" data-index="@item.UserId @item.UserAccount @item.UserName @item.Birthday @item.Region @item.Phone
                @item.Email @item.UpdateDate @item.UserStatus">
                <td>
                    @item.UserId
                </td>
                <td>
                    @item.UserAccount
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.UpdateDate
                </td>
                @if (item.UserStatus == "01")
                {
                    <td>
                        正常
                    </td>
                }
                else
                {
                    <td>
                        註銷
                    </td>
                }

                <td class="text-xl-right">
                    <a href="/Employee/MemberEdit/@item.UserId" class="btn btn-outline-primary">編輯資料</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (empToastr != "Guest")
{
    <script type="text/javascript">

        $(function () {

        Command: toastr["success"]("@empToastr");
        @{emp.HttpContext.Session.Remove("employeeToastr");}

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    })
    </script>
}