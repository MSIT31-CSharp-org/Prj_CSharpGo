@model IEnumerable<Prj_CSharpGo.Models.OrderDetail>

@{
    ViewData["Title"] = "OrderEdit";
    Layout = "EmployeeLayout";
}


    @foreach(var item in Model){ <h1>訂單編號 : @item.OrderId</h1> break; }



<hr />

<form action="/Employee/OrderEdit/@Model." method="post">

    @Html.AntiForgeryToken()
    <table class="table">
        <thead>
            <tr>
                <th>
                    產品編號
                </th>
                <th>
                    單價
                </th>
                <th>
                    數量
                </th>
                <th>
                    Commets
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.ProductId
                </td>
                @{
                    <td>
                        @(item.UnitPrice * item.Discount)
                    </td>
                }


                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Commets
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        @*<input type="submit" value="確定送出" class="btn btn-primary" />*@
        <a href="/Employee/Order" class="btn btn-danger">回到清單</a>
    </div>
</form>
