@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "變更密碼";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>



    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row col-md-10">
        <form id="change-password-form" method="post">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@

            <div class="form-group row d-flex justify-content-start">
                <div class="row d-flex justify-content-start d-inline col-8 d-inline">
                    <h4 class="col-2">變更密碼</h4>
                    <!--送出表單-->
                    <button type="submit" class="btn btn-outline-primary col-2">更新密碼</button>
                </div>
            </div>

            <!--舊密碼驗證-->
            <div class="form-group row d-flex justify-content-start">
                <div class="col-8">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-lock col-1"></i>
                            </div>
                        </div>
                        <input asp-for="Input.OldPassword" class="form-control" id="id_password" placeholder="請輸入舊密碼" />
                        <i class="fas fa-eye form-control col-1" id="togglePassword" style="cursor: pointer; margin-left: -30px; z-index: 1000; justify-content: center; align-items: center; "></i>
                    </div>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
            </div>

            <!--新密碼驗證-->
            <div class="form-group row d-flex justify-content-start">
                <div class="col-8">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-lock col-1"></i>
                            </div>
                        </div>
                        <input asp-for="Input.NewPassword" class="form-control" id="id_password1" placeholder="請輸入新密碼" />
                        <i class="fas fa-eye form-control col-1 justify-content-center" id="togglePassword1" style="cursor: pointer; margin-left: -30px; z-index: 1000; justify-content: center; align-items: center; "></i>
                    </div>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
            </div>

            <!--新密碼二次驗證-->
            <div class="form-group row d-flex justify-content-start">
                <div class="col-8">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-lock col-1"></i>
                            </div>
                        </div>
                        <input asp-for="Input.ConfirmPassword" class="form-control" id="id_password2" placeholder="確認輸入新密碼" />
                        <i class="fas fa-eye form-control col-1" id="togglePassword2" style="cursor: pointer; margin-left: -30px; z-index: 1000; justify-content: center; align-items: center; "></i>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <!-- For 顯示密碼-->
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#id_password');
        const password1 = document.querySelector('#id_password1');
        const password2 = document.querySelector('#id_password2');

        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });

        togglePassword1.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password1.getAttribute('type') === 'password' ? 'text' : 'password';
            password1.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });

        togglePassword2.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password1.getAttribute('type') === 'password' ? 'text' : 'password';
            password1.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });

    </script>

</body>
</html>