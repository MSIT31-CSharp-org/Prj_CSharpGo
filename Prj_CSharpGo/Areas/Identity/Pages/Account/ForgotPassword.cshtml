@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "忘記密碼";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <link href="~/css/LoginRegister.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    @*<h1>@ViewData["Title"]</h1>*@

            <form method="post">
                <div class="form-group row d-flex justify-content-center">
                    <div class="col-4">
                        <h4 class="d-flex justify-content-center">請輸入您註冊時提供的Eamil</h4>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-envelope col-1"></i>
                                </div>
                            </div>
                            <input asp-for="Input.Email" class="form-control d-inline" placeholder="Email" />
                            <button type="submit" class="btn btn-primary d-inline">確認</button>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

            </form>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>