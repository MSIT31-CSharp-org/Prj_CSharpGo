@page
@using Microsoft.AspNetCore.Http
@model LoginModel

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor user

@{
    string userToastr = user.HttpContext.Session.GetString("userToastr") ?? "Guest";
}

@{
    ViewData["Title"] = "登入";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>

    <link rel="stylesheet" href="~/css/LoginRegister.css" >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>

    <form id="account" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <!--信箱驗證-->
        <div class="form-group row d-flex justify-content-center">
            <div class="col-8">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-envelope col-1"></i>
                        </div>
                    </div>
                    <input type="text" asp-for="Input.Email" class="form-control" placeholder="Email" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>

        <!--密碼驗證-->
        <div class="form-group row d-flex justify-content-center">
            <div class="col-8">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fas fa-lock col-1"></i>
                        </div>
                    </div>
                    <input type="password" asp-for="Input.Password" class="form-control" id="id_password" placeholder="密碼" />
                    <i class="fas fa-eye form-control col-1" id="togglePassword" style="cursor: pointer; margin-left: -30px; z-index: 1000; justify-content: center; align-items: center; "></i>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>

        <!--記住密碼-->
        <div class="form-group row justify-content-center d-inline-block d-flex">
            <div class="col-8">
                <div class="d-inline d-flex justify-content-start custom-control custom-checkbox custom-control-inline">
                    <input name="checkbox" id="checkbox_0" type="checkbox" class="custom-control-input" asp-for="Input.RememberMe">
                    <label for="checkbox_0" class="custom-control-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group row justify-content-center d-inline-block d-flex">
            <div class="col-8">
                <div class="d-inline d-flex justify-content-start">
                    <a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration:none;">
                        <i class="fas fa-question-circle"></i>
                        <label style="cursor:pointer;">
                            忘記密碼
                        </label>
                    </a>
                </div>
            </div>
        </div>

        <!--登入按鈕-->
        <div class="form-group row d-flex justify-content-center">
            <div class="col-8">
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-outline-primary">登入</button>
                </div>
            </div>
        </div>

    </form>



    @section Scripts {
        <partial name="_ValidationScriptsPartial">
    }
    <!-- For 顯示密碼-->
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#id_password');

        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });
    </script>


    @if (userToastr == "登出成功")
    {
        <script type="text/javascript">

        $(function () {

        Command: toastr["success"]("@userToastr");
        @{user.HttpContext.Session.Remove("userToastr");}

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    })
        </script>
    }
    else if (userToastr != "Guest")
    {
        <script type="text/javascript">

        $(function () {

        Command: toastr["error"]("@userToastr");
        @{user.HttpContext.Session.Remove("userToastr");}

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    })
        </script>
    }
</body>
</html>