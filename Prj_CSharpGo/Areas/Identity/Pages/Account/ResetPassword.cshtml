@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "重設密碼";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <link href="~/css/LoginRegister.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>

    <div class="container">
        <div class="row d-flex justify-content-center">

            <div class="form-group row d-flex justify-content-center">
                <div class="col-7">
                    <h4>為了您的帳號安全著想，我們誠摯建議您設定新密碼</h4>
                </div>
            </div>

            <hr />

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />

                <div class="form-group row d-flex justify-content-center">
                    <div class="col-8">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-envelope col-1"></i>
                                </div>
                            </div>
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>




                <!--主密碼-->
                <div class="form-group row d-flex justify-content-center">
                    <div class="col-8">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-lock col-1"></i>
                                </div>
                            </div>
                            <input type="password" asp-for="Input.Password" class="form-control" id="id_password" placeholder="請輸入密碼" />
                            <i class="fas fa-eye form-control col-1" id="togglePassword" style="cursor: pointer; margin-left: -30px; z-index: 1000; justify-content: center; align-items: center; "></i>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>

                <!--二道密碼-->
                <div class="form-group row d-flex justify-content-center">
                    <div class="col-8">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-lock col-1"></i>
                                </div>
                            </div>
                            <input type="password" asp-for="Input.ConfirmPassword" class="form-control" id="id_password1" placeholder="再次輸入密碼" />
                            <i class="fas fa-eye form-control col-1" id="togglePassword1" style="cursor: pointer; margin-left: -30px; z-index: 1000; justify-content: center; align-items: center; "></i>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <!--確認重設密碼-->
                <div class="form-group row d-flex justify-content-center">
                    <div class="col-8">
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-outline-primary">確認重設密碼</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>






    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <!-- For 顯示密碼-->
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#id_password');
        const password1 = document.querySelector('#id_password1');

        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });

        togglePassword1.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password1.getAttribute('type') === 'password' ? 'text' : 'password';
            password1.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });
    </script>

</body>
</html>